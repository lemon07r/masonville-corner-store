{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["bun-types", "node"],
    "baseUrl": ".",
    "paths": {
      "@images/*": ["src/assets/images/*"],
      "@styles/*": ["src/styles/*"],
      "@scripts/*": ["src/scripts/*"]
    }
  },
  "include": [
    "eleventy.config.ts",
    "vite.config.ts",
    "src/**/*",
    "tests/**/*.ts"
  ]
}
